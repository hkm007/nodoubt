<%- include('includes/header') %>
    <%- include('includes/flash') %>

    <div class="container my-3">
        <div class="col-lg-8 mx-auto my-2">
            <h3>Update Post</h3>
            <hr />
            <form action="/post/update/<%- uPost._id %>" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="title" value="<%- uPost.title %>" id="title" required>
                </div>
                <div class="mb-3">
                    <label for="company" class="form-label">Company</label>
                    <input type="text" class="form-control" name="company" value="<%- uPost.company %>" id="company" required>
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label">Content</label>
                    <textarea class="form-control" name="content" id="content" rows="10"><%- uPost.content %></textarea>
                </div>
    
                <button class="btn btn-primary" type="submit">Update</button>
            </form>
        </div>
    </div>

    <%- include('includes/footer') %>